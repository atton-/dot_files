" settings

" hide all menu
set gui=none

" hint font size
highlight Hint font-family: monospace; font-size: 18px; font-weight: normal; text-transform: none; color: white; background-color: red; border-color: ButtonShadow; border-width: 0px; border-style: solid; padding: 0px 1px 0px 1px;

" hint chars
set hintchars='asdfjkl;'


" mappings for default function

" yank URL support escaped multi byte character
nnoremap y :js util.copyToClipboard(buffer.URL, true)<CR>

" yank page title shortcut
nnoremap Y :js util.copyToClipboard(buffer.title, true)<CR>


" mappings for firefox add-on

" shortcut mybokmarks
nnoremap b :tabopen about:mybookmarks<CR>

" shortcut nextplease
nnoremap <c-n> :js nextplease.openNextLink()<CR>
nnoremap <c-p> :js nextplease.openPrevLink()<CR>


" settings for vimperator plugin

" somooziee
let g:smooziee_scroll_amount="50"       " scroll amonut on up/down
let g:smooziee_scroll_interval="5"      " scroll time

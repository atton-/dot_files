# {{{ alpine

function alpine() {
    local alpine_running=`docker ps -q --filter 'name=alpine'`

    if [ -z $alpine_running ]; then
        docker run --rm -it --name alpine alpine:latest
    else
        docker run --rm -it alpine:latest
    fi
}

